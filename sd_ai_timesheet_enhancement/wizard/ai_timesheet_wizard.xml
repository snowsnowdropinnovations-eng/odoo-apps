<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_timesheet_ai_wizard_form" model="ir.ui.view">
        <field name="name">ai.timesheet.wizard.form</field>
        <field name="model">ai.timesheet.wizard</field>
        <field name="arch" type="xml">
            <form string="AI Enhance">
                <sheet>
                    <group>
                        <field name="html_description" widget="html"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_paste_description" type="object" string="OK" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
